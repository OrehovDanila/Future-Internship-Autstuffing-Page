@import '~styles/_import'

modalPosition = 60px

.modal > div
	width calc(100vw - 120px)
	position relative
	// left modalPosition
	// right modalPosition
	// margin-bottom modalPosition
	// margin-top modalPosition
	background-color #F0F0F0
	padding 80px 0
	margin 60px
	margin-top 60px
	@media tablet
		top 0
		left 0
		right 0
		margin-top 0
		margin-bottom 0
		width 100vw
		height auto
	@media mobile
		padding 40px 0
		margin-bottom 40px

.overlay
	position fixed
	display flex
	align-items flex-start
	justify-content center
	overflow-y: scroll
	// overflow auto
	z-index 1
	top 0
	left 0
	right 0
	height 100vh
	// background-color rgba(0, 0, 0, 0.6)
	background-color #797979
	// padding-top 60px
	@media tablet
		background-color #F0F0F0

.close
	position absolute
	right 40px
	top 40px
	cursor pointer
	transition 0.2s
	&:hover
		transform rotate(90deg)
	@media mobile
		right 20px
		top 20px
		transform scale(0.8)

.title
	margin-bottom 80px
	font-size 64px
	line-height 68px
	white-space pre
	@media tablet
		margin-bottom 40px
		font-size 48px
		line-height 52px
	@media mobile
		font-size 36px
		line-height 42px
		max-width 220px
