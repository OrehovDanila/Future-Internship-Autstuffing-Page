@import '~styles/_import'

.wrapper 
	display flex
	align-items center
	justify-content center
	min-height 100vh
	width 100vw
	font-family PTRootUI
	transform-origin top

.diploma
	width 595px
	height 841px
	padding 82px 70px 69px
	background-color #fff
	text-align center
	position relative
	display flex
	flex-direction column
	align-items flex-start

	@media small
		height 339px
		width 240px
		padding 30px 26px 28px

	&__name 
		font-size 36px
		font-weight 500
		line-height 1
		display block
		margin 0 auto

		@media small
			font-size 18px
			line-height 1

	&__rank
		font-size 71.88px
		font-weight 700
		line-height 90px
		margin-bottom 19px
		display inline-block
		margin 0 auto 15px

		@media small
			font-size 29px
			line-height 1.5
			margin-bottom 4px

	&__position
		font-size 36px
		font-weight 500
		line-height 51.91px
		display inline-block
		padding 3px 20px 3px
		border-radius 12px
		background-color #F0F0F0
		margin 0 auto

		@media small 
			font-size 14.5px
			font-weight 500
			line-height 1.44
			padding 2px 10px

	&__container
		margin-top auto
		display flex
		flex-direction column
		align-items flex-start

	&__scores
		font-size 36px
		font-weight 500
		line-height 1
		margin-bottom 16px

		& span 
			font-size 120px

			@media small
				font-size 51px

		@media small
			margin-bottom 12px
			font-size 14.5px
			line-height 1

	&__text 
		font-size 24px
		font-weight 500
		line-height 1.33
		color #878789
		text-align left

		@media small
			font-size 9.66px
			line-height 1.33

	&__icon
		position absolute
		bottom 0
		right 0
		display block
		height 500px
		width 400px

		@media small
			width 161px
			height 200px
			right 0
			bottom 0