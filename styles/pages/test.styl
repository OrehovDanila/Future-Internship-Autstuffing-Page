@import '~styles/_import'

.page 
	background #F0F0F0
	display flex
	flex-direction column
	justify-content center
	font-family 'PTRootUI'

	&.startPage
		padding 174px 0 0

		@media tablet
			padding-top 88px

	&.backgroundWhite
		background-color #fff
		padding 200px 0 50px
		max-height auto

		@media desc
			padding 180px 0 0

		@media small
			padding 130px 0 0

	&.final
		padding-bottom 0
		background #f0f0f0
		padding-top 175px

		@media mobile
			padding-top 120px

		@media small
			padding 105px 0 40px

		@media (max-height 450px) 
			padding-top 130px

.row 
	max-width 1440px !important

	@media tablet 
		max-width 970px !important
