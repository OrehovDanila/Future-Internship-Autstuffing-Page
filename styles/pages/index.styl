@import '~styles/_import'

.gradientWrap
	position relative

section.intro
	height 100vh
	// padding-bottom 120px
	font-weight 600
	// margin-top 83px
	padding-top 100px
	// padding-top (80 + 95 + 83)px
	display flex
	flex-direction column
	flex-wrap: nowrap
	justify-content center
	// @media md
	// 	padding-top 200px
	@media tablet
		padding-top 0
	@media mobileHorizontal
		padding-top 100px
		padding-bottom 30px
		height fit-content
	@media mobile
		padding-top 92px
		padding-bottom 50px
		height 100%

span.slogan
	display block
	margin-top 25px
	@media md
		font-size 64px
		line-height 76px
	@media mobile
		margin-top 15px
		font-size 42px
		line-height 48px

.welcome
	line-height 40px
	font-size 24px
	margin-top 0
	margin-bottom 48px
	@media tablet
		margin-top 15px
		margin-bottom 16px
	@media mobile
		margin-bottom 32px

.en
	display inline-flex
	flex-direction row-reverse

.companyName
	margin-right 12px

.emoji
	width 32px
	height 32px
	margin-bottom -6px
	background-repeat no-repeat
	background-size contain
	background-image url('/static/emojis/hi.png')
	display inline-block

.competencies
	max-width 650px
	margin-bottom 48px
	@media tablet
		margin-top 30px
	@media mobile
		max-width 330px

.btn
	& + &
		margin-left 30px
		@media mobile
			display flex
			margin-left 0
			margin-top 20px

.grandNav
	margin-top 20px !important
	@media mobile
		margin-top 10px !important
