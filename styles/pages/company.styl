@import '~styles/_import'

.text
	font-size 24px
	font-weight 600
	line-height 38px
	color #686868
	max-width 1040px
	@media tablet
		font-size 20px
		line-height 30px

.bottom
	position relative
	// @media tablet
	// padding-bottom 180px

.top100
	@media tablet
		margin-bottom 50px

.underlined
	margin-top 60px
	margin-bottom 60px
	@media mobile
		margin-top 40px
		margin-bottom 40px

.tops
	@media tablet
		&:nth-of-type(n + 3)
			margin-top 60px
	@media mobile
		&:nth-of-type(n + 2)
			margin-top 45px

.serviceListTitle
	@media (max-width: 1700px)
		padding-left 40px
		padding-right 40px
	@media md
		padding-left 0
		padding-right 0
	@media screen and (max-width 1090px)
		padding-left 10px
		padding-right 10px
	@media mobile
		padding-left 0
		padding-right 0
