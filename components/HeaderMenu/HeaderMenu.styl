@import '~styles/_import'

.auth
	&__title
		max-width unset
		white-space pre-line

.nav
	display flex
	align-items center

.ul
	display flex
	@media tablet
		display none

.item
	color #000000
	font-weight 600
	font-size 19px
	margin-right 40px
	&:hover
		color $blue

.phone
	display none
	margin-right 40px
	color #000000
	font-weight 600
	font-size 19px
	line-height 24px
	transition opacity 0.3s ease
	margin-left 30px
	@media tablet
		display block
	@media mobile
		margin-left 0px
		margin-right 30px
	@media (max-width: 359px)
		font-size 16px

.personal
	margin-right 40px
	cursor pointer
	position relative
	height 36px
	z-index 30
	color inherit
	text-decoration none
	font-size inherit
	font-family inherit
	font-weight inherit
	line-height inherit
	border 0
	@media small
		margin-right 30px
	&:before
		opacity 0
		transition opacity 0.3s ease-in-out
		content attr(data-text)
		position absolute
		border-radius 14px
		font-size 13px
		left 50%
		transform translateX(-46%)
		// padding 2px 13px 0 13px
		// box-shadow 0 0 12px 0 rgba(0,0,0,0.08)
		white-space nowrap
		bottom 36px
		font-weight 500
		font-size 13px
		line-height 25px
		pointer-events none
		background-color transparent
		@media mobile
			display none
	&:hover:before
		opacity 1

.hide
	display none

.active
	color $blue

.visible
	display block
