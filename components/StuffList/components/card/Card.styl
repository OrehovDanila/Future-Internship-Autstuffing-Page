@import '~styles/_import'


.card
	width 480px
	margin-top 40px
	background-color #EFEFEF

.topSection
	padding 0px

	display flex
	flex-direction column
	align-items center
	gap 15px

	&__img
		height 120px
		width 120px
		border-radius 100px

	&__top
		font-weight 600
		font-size 24px
		line-height 32px

	&__grayText

		font-weight 400
		font-size 19px
		line-height 30px
		opacity 0.5

		margin-top -5px
		padding 0px

		display flex
		flex-direction row
		justify-content center
		align-items center
		gap 5px

.content
	height 100%
	padding 40px

	display flex
	flex-direction column
	align-items center
	justify-content space-between
	gap 30px

.list
	margin-top 20px
	display flex
	flex-wrap wrap
	justify-content center
	gap 5px

	&__item
		padding 4px 10px 5px

		font-weight 600
		font-size 13px
		line-height 18px
		color $gray

		border 1px solid $lightGray
		border-radius 6px
		background-color $white


.bottom
	font-size 30px
	font-weight 700
	line-height 44px