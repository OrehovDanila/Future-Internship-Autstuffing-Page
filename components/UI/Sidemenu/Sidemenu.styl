@import '~styles/_import'

.wrap
	width 100vw
	height 100%
	max-height 100vh
	position fixed
	z-index 200
	top 0
	left 0
	right 0
	transform translateX(100%)
	background-color #000
	transition transform 0.5s
	overflow-y scroll

.inner
	height 100%

.col
	position relative
	display flex
	flex-direction column
	align-items flex-end
	margin-top 150px
	@media tablet
		padding 0 40px 0 60px
	@media mobile
		align-items flex-end
		padding 0 20px

.open
	transform translateX(0)

.nav
	text-align right
	@media mobile
		position absolute
		top 50%
		right 20px
		transform translateY(-100%)
	@media screen and (max-width: 470px)
		top: 63%

.li
	& + &
		margin-top 44px
		@media (max-height: 801px)
			margin-top 25px
		@media mobile
			margin-top 15px

.link
	color $gray
	font-size 48px
	font-weight 800
	line-height 38px
	&--disabled
		cursor pointer
		color $dimmedGray
		&:hover
			color $dimmedGray
	@media (max-height: 801px)
		font-size 36px
	@media small-tablet
		font-size 30px
		line-height 30px
	&:hover
		color #ffffff

.burger
	position absolute
	top -70px
	right 40px
	@media (max-width: 1280px)
		top -100px
	@media tablet
		top -115px
	@media mobile
		position fixed
		top 30px
		right 20px
	&.scrolled
		top -110px

.footer
	display flex
	justify-content space-between
	align-items center
	width 100%
	margin-top auto
	margin-bottom 75px
	line-height 32px
	font-weight 600
	@media screen and (max-height: 660px)
		position absolute
		width 50%
		left 30px
		bottom 40px
		margin-bottom 0
		flex-direction column
		align-items flex-start
		label
			margin-top 30px
	@media mobile
		flex-direction column
		align-items flex-start
		margin-bottom 0
		position fixed
		left 20px
		bottom 30px
		label
			margin-top 24px
	@media screen and (max-width: 470px)
		flex-direction row
		width 90%
