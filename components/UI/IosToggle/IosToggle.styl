@import '~styles/_import'

.wrap
	display flex
	height 43px
	@media tablet
		justify-content flex-start
	input
		display none
	@media mobile
		display flex
.text
	margin-left 10px
	font-weight 400
	line-height 32px
	font-size 14px
	color #ffffff
	cursor pointer
	@media mobile
		order 2
		margin-right 0
	&:hover
		color $green
.toggle
	top -1px
	size 60px 34px
	background-color #fff
	border none
	border-radius 40px
	vertical-align middle
	position relative
	display inline-block
	cursor pointer
	flex 0 0 auto
	transition background-color .3s, border-color .3s
	user-select none
	&:after
		content ""
		size 22px
		background-color #dbdbdb
		border-radius 50%
		display block
		position absolute
		left 6px
		top 6px
		transition .2s
		will-change: left
	&:hover + .text
		color $green
	input:checked ~ &
		&:after
			background-color $green
			left calc(100% - 28px)
	@media mobile
		order 1
