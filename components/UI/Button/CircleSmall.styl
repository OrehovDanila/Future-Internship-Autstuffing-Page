$ringColor = #000

.ring
	display inline-block
	position absolute
	right: 50%
	top: 50%
	transform: translate(50%, -50%)
	width: 40px
	height: 40px
	div
		box-sizing border-box
		display block
		position absolute
		width 32px
		height 32px
		margin 4px
		border-radius 50%
		border 2px solid $ringColor
		animation smallSpin 1.2s cubic-bezier(0.5, 0, 0.5, 1) infinite
		border-color $ringColor transparent transparent transparent
		&:nth-child(1)
			animation-delay -0.45s
		&:nth-child(2)
			animation-delay -0.3s
		&:nth-child(3)
			animation-delay -0.15s

@keyframes smallSpin
	0%
		transform rotate(0deg)
	100%
		transform rotate(360deg)
