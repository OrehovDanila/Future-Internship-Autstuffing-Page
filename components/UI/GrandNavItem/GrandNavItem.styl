@import '~styles/_import'

descMedia = "screen and (max-width 1280px)"

.link
	display flex
	align-items center
	padding 0
	height 243px
	font-size 84px
	font-weight 700
	line-height 86px
	background-color #f0f0f0
	transition background-color 0.3s ease-out
	position relative
	@media md
		font-size 72px
	@media descMedia
		font-size 48px
		line-height 56px
		height 163px
	@media mobile
		font-size 24px
		font-weight 700
		line-height 36px
		height 93px
		display flex
		align-items center
		padding 0
	& + &
		margin-top 2px
	&:hover
		background-color $blue
		border-color #f0f0f0
		color #ffffff
		.arrow
			&:after,
			&:before
				border-color #fff
				@media tablet
					border-color #000
			&:before
				background-color #ffffff
				width 200px
				@media md
					width 175px
				@media descMedia
					// background-color #000000
					width 86px
				@media mobile
					width 48px
				@media tablet
					background-color #000
		@media tablet
			background-color #f0f0f0
			color #000000

.inner
	display flex
	justify-content space-between
	align-items center
	text-transform lowercase

.arrow
	position relative
	&:after
		position absolute
		top -22px
		right 9px
		content ''
		display inline-block
		width 45px
		height 45px
		border-right 7px solid #000000
		border-top 7px solid #000000
		transform rotate(45deg)
		// transition border-color 0.3s ease-out
		@media md
			width 39px
			height 39px
			top -20px
		@media descMedia
			width 28px
			height 28px
			border-right 4px solid #000000
			border-top 4px solid #000000
			// top 6px
			top -14px
		@media mobile
			top -6px
			width 10px
			height 10px
			border-width 3px
			top -3px
			right 0
	&:before
		content ''
		position absolute
		display block
		size 144px 6px
		background-color #000000
		top 50%
		transform translateY(-50%)
		right 6px
		transition width 0.3s ease-out
		@media md
			top 56%
			width 115px
		@media descMedia
			top 50%
			height 4px
			width 86px
		@media mobile
			height 0px
			width 0px
			top 52%
			right 7px
