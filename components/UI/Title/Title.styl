@import '~styles/_import'

.title,
.h1
	color #000
	font-size 84px
	line-height 90px
	font-weight 700
	white-space pre-wrap
	text-transform: lowercase

	&.firstLetterUpper 
		text-transform none

	@media tablet
		font-size 48px
		line-height 52px

	@media small
		font-size 40px

.h2
	font-size 48px
	line-height 62px
	margin-bottom 45px
	@media tablet
		font-size 30px
		line-height 40px

.h3
	font-size 20px
	font-weight 700
	margin-top 40px
	margin-bottom 20px

.h4
	text-transform: none

.before_text
	margin-bottom 48px
	@media tablet
		margin-bottom 30px

.before_bubbles
	margin-bottom 60px
	@media tablet
		margin-bottom 30px

.hyphens
	-webkit-hyphens: auto;
	-moz-hyphens: auto;
	-ms-hyphens: auto;
	hyphens: auto;
